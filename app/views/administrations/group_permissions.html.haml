#header
  #page_title
    %h1 Assign Permission
  #lol
  %br.clear

.ex_container
  %input{:id=>"group_permission_group_mode",:style=>"display:none;",:mode=>"show"}
  .full_container
    %h1 Existing Groups
    %table#show_group_lists_grid{:class=>"selectable_grid",:field=>'group_permission_group', :db_click_function=>"true", :edit=>"true", :db_click_url=>"/group_permissions/"}
    #group_permission_group_edit_container

%script{:type=>"text/javascript", :charset=>"utf-8"}
  :plain
    $("#show_group_lists_grid").flexigrid({
      url: '/grids/show_group_lists_grid?tag_type_id=#{@tag_type_id}',
      dataType: 'json',
      colModel: [
        {
          display: 'ID',
          name: 'id',
          width: 40,
          sortable: true,
          align: 'left'
        },

        {
          display: 'Name',
          name: 'name',
          width: 200,
          sortable: true,
          align: 'left'
        },

        {
          display: 'Description',
          name: 'description',
          width: 570,
          sortable: true,
          align: 'left'
        }
      ],

      searchitems:[
      {
        display: 'Name',
        name: 'name'
      },
      {
        display: 'Description',
        name: 'description'
      }
      ],

      sortname: "name",
      sortorder: "asc",
      usepager: true,
      title: '',
      useRp: true,
      rp: 20,
      showTableToggleBtn: false,
      width: 'auto',
      height: 'auto'
    });