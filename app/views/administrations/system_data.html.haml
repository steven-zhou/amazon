#header
  #page_title
    %h1 System Data
#content_full_page
  .full_container
    .left
      %h1 Select System Data Type:
    &nbsp
    %select#system_data_type.clear_select{:style => "display:inline;width:20%;"}
      %option
        = AmazonSetting.distinct_setting_type
    %input{:id => "system_data_mode", :style => "display:none;", :mode => "show"}
    %div#system_data_main_contents{:style => "display:none;margin:10px 0 0 0;"}
      .full_container#system_data_add_data
        = link_to_function image_tag("close_icon.png") , :class => "", :id=> "system_data_close_entry",:style => "display:none;float:right;", :field => "system_data", :title=>"Close"
        .title
          = link_to_function image_tag("add_icon.png" , :size => "22x22", :id => "system_data_add_entry", :class => "new_option", :field => "system_data")
          &nbsp
        %h2 New
        %div#system_data_add_entry_form{:style => "display:none;"}
          - form_for AmazonSetting.new, :url => {:controller => "amazon_settings", :action => "new_setting"}, :html => {:class => "ajax_form"} do |p|
            = p.text_field :type, {:style => "display:none"}
            .form_line
              .field_30
                = p.label :name, "<span class='asterisk'>*</span>Name"
                = p.text_field :name,:class=>"mandantory_field",:mandantory_field1=>"amazon_setting_name",:submit_button_id=>"system_data_submit"
              .field_35
                = p.label :description, 'Description'
                = p.text_field :description
              .field_7
                = p.label :active, 'Active'
                %label
                = p.check_box :status, {:style => "width:auto;",:checked=> "checked"}
              .field_20
                %label &nbsp
                = submit_tag 'Submit', :style => 'display:inline;float:right;', :name => 'edit',:id=>"system_data_submit",:disabled=>true
          

      %div#system_data_entries

      %br.clear

      %div#edit_system_data_entry
        