
%h2 Phone
.form_line
  .field_25
    = phone.label :contact_meta_type_id, 'Type'
    = phone.collection_select :contact_meta_type_id, @phone_types, :id, :name
  .field_15
    = phone.label :pre_value, "Pre Value"
    = phone.text_field :pre_value, :readonly => @phone_types.blank? ? true :false
  .field_34
    = phone.label :value, "Value"
    = phone.text_field :value, :class => "phone_value_filed empty_field",:readonly => @phone_types.blank? ? true :false
  .field_15
    = phone.label :post_value, "Post Value"
    = phone.text_field :post_value,:readonly => @phone_types.blank? ? true :false
