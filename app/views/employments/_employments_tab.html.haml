-# The main Employment tab
#add_new_employment.header_container
  .options
    = link_to_function image_tag('close_icon.png'), :class => " person_employments_close", :toggle_id_name => "new_employment", :style => "display:none", :title=>"Close", :field => "employment"
  .title
    = link_to_function image_tag('add_icon.png'), :id=>"add_employment", :class=>"person_employments_toggle_button", :toggle_id_name => "new_employment" if (!@person.nil? && !@person.new_record?)
    &nbsp
  %h1 New Employment
  %input{:type => "text", :id => "employment_hidden_tab", :mode => "show", :style => "display:none"}
  %input{:id => "employment_input_change_or_not", :style => "display:none", :value => "false"}
  -# Initially hidden new employment form
  -form_for([@person,@employment], :html => {:style => "display:none", :class => 'ajax_form',:submit_button_id=>"employment_new_submit"}) do |employment|
    = render :partial => '/employments/employment_form', :locals => { :employment => employment }
    = submit_tag 'Submit',:id=>"employment_new_submit" ,:disabled=>true

#employments
  =# Render the person's employments
  = render :partial => '/employments/employment', :collection => person.employments