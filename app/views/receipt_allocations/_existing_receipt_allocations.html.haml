.full_container
  %h2 Receipt Allocations
  %table#show_existing_receipt_allocations_grid

%script{:type => "text/javascript", :charset => "utf-8"}
  :plain
    delete_from_a_grid = function(){
      delete_from_grid($("#show_existing_receipt_allocations_grid tr.trSelected").attr('id'),"#receipt_mode","delete","/receipt_allocations/");
    };

    $("#show_existing_receipt_allocations_grid").flexigrid({
    url: '/grids/show_existing_receipt_allocations_grid?entity_receipt_id=#{@entity_receipt.id}',
    dataType: 'json',
    colModel : [
    {
    display: 'ID',
    name : 'id',
    width : 40,
    sortable : true,
    align: 'left'
    },
    {
    display: 'Receipt Account',
    name : 'receipt_accounts.name',
    width : 100,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Campaign',
    name : 'campaigns.name',
    width : 100,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Source',
    name : 'sources.name',
    width : 100,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Amount',
    name : 'amount',
    width : 60,
    sortable : true,
    align: 'left'
    }
    ],
    searchitems : [
    {
    display: 'Receipt Account',
    name : 'receipt_accounts.name'
    },

    {
    display: 'Campaign',
    name : 'campaigns.name'
    },

    {
    display: 'Source',
    name : 'sources.name'
    }
    ],
    buttons : [
            {name: '', bclass: 'delete delete_button_on_grid', onpress : delete_from_a_grid},
        ],
    sortname: "id",
    sortorder: "asc",
    usepager: true,
    useRp: true,
    rp: 20,
    showTableToggleBtn: false,
    width: 'auto',
    height: 'auto'
    });