-form_for([@person,email], :html => {:class => 'contact_form ajax_form add_email', :submit_button_id => "submit_email_field"}) do |f|
  .form_line
    .field_20
      = f.label :contact_meta_type_id, "<span class='asterisk'>*</span>Type"
      = f.collection_select :contact_meta_type_id, Contact.email_types - @person.personal_email_types, :id, :name, {:include_blank => true}, {:class=>'compulsory_field'}
    .field_75
      = f.label :value, "<span class='asterisk'>*</span>Value"
      = f.text_field :value ,:id => email.new_record? ? "email_value" : "email_value_edit", :class=>"compulsory_field"
  .form_line
    .field_100
      = f.label :remarks, "Remarks"
      = f.text_field :remarks

  = submit_tag 'Submit', :id => "submit_email_field" , :check_field =>email.new_record? ? "email_value" : "email_value_edit",:disabled=> email.new_record? ? true:false
  %br{:style=>"clear:both;"}