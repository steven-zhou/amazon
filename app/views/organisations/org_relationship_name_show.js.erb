<% if @organisation.new_record? %>
  $("#<%=escape_javascript("#{@update_field}")%>").css('display','');
  $("#<%=escape_javascript("#{@update_field}")%>").html("Invalid ID");
  $("#<%=escape_javascript("#{@update_field}")%>").stop().fadeTo(3000,1);
  $("#<%=escape_javascript("#{@update_field}")%>").stop().fadeOut(3000);

  $("#org_relationship_submit_button").attr('disabled',true);
<% else %>
  $("#<%=escape_javascript("#{@update_field}")%>").css('display','');
  $("#<%=escape_javascript("#{@update_field}")%>").html("<%=escape_javascript("#{@organisation.full_name}")%>")
  $("#org_relationship_submit_button").attr('disabled',false);
  <%unless flash[:error].nil?%>
    $("#org_relationship_submit_button").attr('disabled',true);
    $("#flash_message_text").html("<%=escape_javascript(flash[:error])%>");
    $("#flash_message").dialog( {
    modal:true,
    resizable: false,
    height: 'auto',
    width: 600,
    buttons: {
    OK: function(){
    $(this).dialog('close');
    }
    }
    });
    $('#flash_message').parent().find("a").css("display","none");
    $("#flash_message").parent().css('background-color','#D1DDE6');
    $("#flash_message").css('background-color','#D1DDE6');
    $('#flash_message').dialog('open');
  <%end%>

<% end %>
$('#org_spinner').hide();