<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>EmZee Version 1.1 - The Community Social Solution</title>
    <style type="text/css">
      div.nicEdit-main
      {
        background-color:#FFFFFF;
        width:500px !important;
      }
    </style>
    <script language="JavaScript" type="text/javascript">
      function noBack(){window.history.forward()}
      noBack();
      window.onload=noBack;
      window.onpageshow=function(evt){if(evt.persisted)noBack()}
      window.onunload=function(){void(0)}
    </script>
    <%= stylesheet_link_tag  "Styles.css", "flexigrid.css","validationEngine.jquery.css","jquery-ui-1.7.1.custom.css","jpassword","jquery.lightbox-0.5", :cache => "common"%>
    <%= yield_authenticity_token %>
    <%= javascript_include_tag  "jquery.js", "jquery-ui-1.7.1.custom.min.js", "typewatch.js",
      "flexigrid.js",
      "/javascripts/tiny_mce/tiny_mce.js",
      "jquery-tinymce.js",
      "application.js",
      "jquery.form.js",
      "jquery.validationEngine.js",
      "nicEdit.js",
      "jquery.pstrength-min.1.2.js",
      "jquery.lightbox-0.5",
      "jquery.jpassword.js"%>
    <%- if session[:module] == "dashboard" %>
      <%= stylesheet_link_tag "portlets" %>
      <%= javascript_include_tag  "config.js","interface.js"%>
    <%- end%>
    <%- if session[:module] == "core" %>
      <%= javascript_include_tag  "jquery.qtip.min.js","systemcore.js", "reports.js"%>
    <%- end%>
    <%- if session[:module] == "administration" %>
      <%= stylesheet_link_tag "checkbox" %>
      <%= javascript_include_tag  "admin.js","iphone-style-checkboxes.js"%>
    <%- end%>
    <%- if session[:module] == "client_setup" %>
      <%= javascript_include_tag  "client_setup.js"%>
    <%- end%>
    <%- if session[:module] == "receipting" %>
      <%= javascript_include_tag  "receipting.js"%>
    <%- end%>
    <%- if session[:module] == "membership" %>
      <%= stylesheet_link_tag "checkbox" %>
      <%= javascript_include_tag  "membership.js","iphone-style-checkboxes.js"%>
    <%- end%>
  </head>

  <body>
    <div id="app"><!--interface wrapper-->

      <%= render(:partial => "/shared/flash_messages") %>
      <div id="lc"><!--left collumn, menu area-->
        <%= render(:partial => "/shared/menu") %>
      </div>

      <div id="main"><!--main area wrapper-->
        <%= render(:partial => "/shared/system_bar") %>
        <div id="content"><!--main content area "where the magic happens"-->
          <%= yield %>
        </div>
        <br style="clear: both;"/>
      </div>
      <br style="clear: both;"/>
    </div>

    <div id ="footer" class="footer">
      <span>Powered by: <%=image_tag('memberzone_footer.png')%>  &nbsp;&nbsp; Licensed to: Demostration Server   </span>
    </div>

    <!-- Feedback form used throughout the system -->
    <%- unless @current_user.nil?%>
      <%= render(:partial => "/feedback/feedback_form") %>
    <%- end%>
    <div id="feedback_confirmation"></div>
  </body>
</html>


