.full_container
  %h2 Default Value
  %table#show_default_value_grid{:class=>"selectable_grid",:field=>"tax_item",:db_click_function=>"true",:db_click_url=>"/user_preferences/edit_default_value"}

%script{:type => "text/javascript", :charset=> "utf-8"}
  :plain
    $("#show_default_value_grid").flexigrid({
    url: '/grids/show_default_value_grid',
    dataType: 'json',
    colModel : [
    {
    display: 'id',
    name : 'id',
    width : 40,
    sortable : true,
    align: 'left'
    },

    {
    display: 'User Name',
    name : 'login_accounts.user_name',
    width : 100,
    sortable : true,
    align: 'left'
    },

   
    {
    display: 'Start Date',
    name : 'start_date',
    width : 100,
    sortable : true,
    align: 'left'
    },

    {
    display: 'End Date',
    name : 'end_date',
    width : 100,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Address Type',
    name : 'amazon_settings.name',
    width : 100,
    sortable : true,
    align: 'left'
    },

  
    ],
    
    sortname: "id",
    sortorder: "asc",
    usepager: true,
    useRp: true,
    rp: 20,
    showTableToggleBtn: false,
    width: 'auto',
    height: 'auto'
    });
