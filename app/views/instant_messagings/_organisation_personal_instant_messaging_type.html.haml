-form_for([@organisation,instant_messaging], :url => "/organisations/#{@organisation.id}/instant_messagings", :html => {:class => 'contact_form ajax_form add_im', :submit_button_id => "submit_instant_messaging_field"}) do |w|
  .form_line
    .field_20
      = w.label :contact_meta_type_id, "<span class='asterisk'>*</span>Type"
      = w.collection_select :contact_meta_type_id, Contact.instant_messaging_types - @organisation.personal_instant_messaging_types, :id, :name, {:include_blank => true}, {:class=>'compulsory_field'}
    .field_75
      = w.label :value, "<span class='asterisk'>*</span>Value"
      = w.text_field :value, :id => instant_messaging.new_record? ? "instant_messaging_value" : "instant_messaging_value_edit", :class=>'compulsory_field'
  .form_line
    .field_100
      = w.label :remarks, "Remarks"
      = w.text_field :remarks
  = submit_tag 'Submit' , :id => "submit_instant_messaging_field" ,:check_field => instant_messaging.new_record? ? "instant_messaging_value" : "instant_messaging_value_edit",:disabled=> instant_messaging.new_record? ? true:false
  %br{:style=>"clear:both;"}