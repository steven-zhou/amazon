%script{:type => "text/javascript"}
  :plain
    $(function() {
      tinyMCE.init({
        // General options
        mode: "textareas",
        theme : "advanced",
        plugins : "table",
        skin: "o2k7",
        editor_selector : "mceEditor",

        theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,undo,redo,pastetext,paste,copy,cut,|,link,unlink,anchor,image,cleanup,code,|,bullist,numlist,insertdate,inserttime,preview,|,formatselect,fontselect,fontsizeselect,",
        theme_advanced_buttons2 : "insertdate,inserttime,preview,|,forecolor,backcolor,|,outdent,indent,blockquote,tablecontrols,",
        theme_advanced_buttons3 : "",
        theme_advanced_toolbar_location : "top",
        theme_advanced_toolbar_align : "left"
      });



    });

-form_for @mail_template, :url => @mail_template.new_record? ? message_templates_path : message_template_path(@mail_template), :html => {:class => "ajax_form", :submit_button_id => @mail_template.new_record? ? "new_submit_button" : "edit_submit_button"} do |f|
  .form_line
    .field_22
      = f.label :name, "<span class='asterisk'>*</span>Mail Category"
      = f.collection_select :template_category_id, TemplateCategory.active_template_category, :id, :name, {:include_blank=>true},{:class=>"compulsory_field",:name => "mail_template[template_category_id]"}
    .field_20
      = f.label :name, "<span class='asterisk'>*</span>Name"
      = f.text_field :name, :name => "mail_template[name]",:class => "compulsory_field"
    .field_40
      = f.label :description, "Description"
      = f.text_field :description
    .field_10{:class => "hidden"}
      %label &nbsp
      %input{:id => "prefix_table_name", :value => "#{@prefix_table_value}"}
  .form_line
    .field_22
      %label Table Name
      %select{:class => "select_table_word clear_select general_drop_down_level", :drop_down_field => @mail_template.new_record? ? "new_mail_template" : "edit_mail_template", :method => "GET", :url => "/message_templates/drop_down_list", :update_field => @mail_template.new_record? ? "merge_field_insert" : "edit_merge_field_insert"}
        -@table_attributes.each do |i|
          %option{:value => i.name}
            = i.name

    .field_22
      %label Field Name
      %select{:class => "select_field_word drop_down_level2 general_drop_down_level_2_3", :drop_down_field => @mail_template.new_record? ? "new_mail_template" : "edit_mail_template",:method => "GET", :url => "/message_templates/drop_down_list_level2_3"}
      %br.clear

    .field_10{:class => "hidden"}
      %input{:class => "data_type drop_down_level3",:name => "data_type", :drop_down_field => @mail_template.new_record? ? "new_mail_template" : "edit_mail_template"}

    .field_10
      %label &nbsp
      =button_to_function 'Insert', :class => "mail_merge_insert_word" ,:style => "width:100%;", :id => @mail_template.new_record? ? "merge_field_insert" : "edit_merge_field_insert"
    .field_10
      %input{:class => "hidden", :name => "type", :value => "#{@type}"}

  .form_line.field_select_line
    .field_100{:style => "height:auto;"}
      = f.label :body, "body"
      = f.text_area :body, :class => 'mceEditor',:name => "mail_template[body]"

  -if @mail_template.new_record?
    = submit_tag '   Add   ', :id => "new_submit_button", :disabled => true
  - else
    = submit_tag '  Update  ', :id => "edit_submit_button", :disabled => false

