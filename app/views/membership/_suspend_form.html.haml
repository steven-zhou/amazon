.container
  %h1 Suspend
  .form_line
    .field_20
      %label <span class="asterisk">*</span>Suspend ID
      %input{:id => "suspended_by", :name => "membership[suspended_by]", :value => "",:class=>"compulsory_field membership_intiator_lookup",:update_field=>"suspended_name"}
      %input{:name=>"field",:value=>"suspend_page",:class=>"hidden"}
      %input{:name=>"render_page",:value=>"suspend_page",:class=>"hidden"}
    .field_5
      %label &nbsp;
      = link_to_function image_tag("Icons/System/search.png"), :class => "person_lookup", :update_field => "suspended_by", :title=>"Search"
    .field_40
      %label Suspend Name
      .display_field_bg#suspended_name

    .field_30
      %label <span class="asterisk">*</span>Suspend Date
      %input{:id => "suspended_date", :name => "membership[suspended_date]", :class => "datepick compulsory_field", :value => Time.now.strftime("%d-%m-%Y")}
  .form_line{:style => "height:auto;"}
    .field_100{:style => "height:auto;"}
      %label <span class="asterisk">*</span>Outcomes
      %textarea{:id=>"suspend_comment",:name=>"membership[suspended_comment]",:style=>"width:100%;height:150px;",:class=>"compulsory_field"}
    %br.clear



  .form_line
    .field_20
      %label Mail Template Category
      = collection_select :letter_id, :template_id, TemplateCategory.active_template_category, :id, :name, {:include_blank => true}, {:class => "select_ajax_call clear_select", :method => "GET", :url => "/amazon_settings/look_for_template", :update_field => "approve_letter_id"}
    .field_20
      %label Mail Template
      %select{:id => "approve_letter_id", :name => "membership[approve_letter_id]", :class => "mail_template", :check_box_id => "approve_letter_sent"}
    .field_20{:style => "display:none;"}
      %label Send Instant Mail
      %input{:type => "checkbox", :id => "approve_letter_sent", :name => "membership[approve_letter_sent]"}
    %br.clear