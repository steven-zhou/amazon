.container
  %h1 Initiator
  .form_line
    .field_20
      %label Initiator ID
      %div.display_field_bg
        =@membership.nil? ? "" : @membership.initiated_by
        %input{:name=>"field",:value=>@membership.person_id,:class=>"hidden membership_person_lookup"}
    .field_40
      %label Initiator
      .display_field_bg#initiator_name
        = @membership.nil? ? "" : @membership.initiated_by.nil? ? "" : Person.find(@membership.initiated_by).name
    .field_30
      %label Initiator Date
      .display_field_bg
        =@membership.nil? ? "" : @membership.initiated_date.nil? ? "" : @membership.initiated_date
  .form_line{:style => "height:auto;"}
    .field_100{:style => "height:auto;"}
      %label Outcomes
      .display_field_bg
        =@membership.nil? ? "" : @membership.initiated_comment.nil? ? "" : @membership.initiated_comment
    %br.clear