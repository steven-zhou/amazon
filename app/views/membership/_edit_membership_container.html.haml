-# locals => {:title => "Review, Approve..."}

%input.hidden{:id => "membership_mode", :mode => "show"}

#edit_membership{:style => "display:none;margin-top:10px;float:left;"}
  .tab_looking_left
  .tab_looking_icon
    = image_tag('edit_icon.png')
    %h3{:style=>"display:inline;"}
      = title
  .tab_looking_right

  %div.tab_close
    .tab_looking_left
    .tab_looking_icon
      = link_to_function image_tag('/images/Icons/System/close.png'), :field => "membership", :title=>"Close", :class => "close_edit close_option", :toggle_id_name => "edit_membership"
    .tab_looking_right
      .options

  -form_for 'membership',:url => {:controller =>"membership",:action=>"update"}, :html => {:class => "ajax_form",:id=>"membership",:submit_button_id=>"new_membership_submit"} do |p|
    .full_container
      #person_detail.container      

      #edit_membership_form.container

  #payment_detail

  #histroy