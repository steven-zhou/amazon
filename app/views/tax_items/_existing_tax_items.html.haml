.full_container
  %h2 Existing Tax Items

  %table#show_tax_items_grid{:class=>"selectable_grid",:field=>"tax_item",:db_click_function=>"true",:edit=>"true",:db_click_url=>"/tax_items/"}

%script{:type => "text/javascript", :charset => "utf-8"}
  :plain
    delete_from_a_grid = function(){
    delete_from_grid($("#show_tax_item_grid tr.trSelected").attr('id'),"#tax_item_mode","delete","/tax_items/");
    };

    retrieve_from_a_grid = function(){
    retrieve_from_grid($("#show_tax_item_grid tr.trSelected").attr('id'),"#tax_item_mode","get","/countries/retrieve_tax_item.js");
    };

    $("#show_tax_items_grid").flexigrid({
    url: '/grids/show_tax_items_grid',
    dataType: 'json',
    colModel : [
    {
    display: 'ID',
    name : 'id',
    width : 40,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Name',
    name : 'name',
    width : 100,
    sortable : true,
    align: 'left'
    },


    {
    display: 'Description',
    name : 'description',
    width : 100,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Percentage',
    name : 'percentage',
    width : 60,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Active',
    name : 'active',
    width : 60,
    sortable : true,
    align: 'left'
    }
    ],
    searchitems : [
    {
    display: 'Name',
    name : 'name'
    },

    {
    display: 'Description',
    name : 'description'
    },

    {
    display: 'Percentage',
    name : 'percentage'
    },

    {
    display: 'Active',
    name : 'active'
    }
    ],
    buttons : [
            {name: '', bclass: 'delete delete_button_on_grid', onpress : delete_from_a_grid},
            {name: '', bclass: 'get retrieve_button_on_grid', onpress : retrieve_from_a_grid}
        ],
    sortname: "id",
    sortorder: "asc",
    usepager: true,
    useRp: true,
    rp: 20,
    showTableToggleBtn: false,
    width: 'auto',
    height: 'auto'
    });