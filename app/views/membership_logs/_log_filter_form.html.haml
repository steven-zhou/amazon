.container
  -form_tag("/membership_logs/filter", {:class => "ajax_form", :submit_button_id => "membership_log_filter", :id => "filter_form"}) do
    %h1 Filter Form
    .form_line
      .field_20
        %label <span class='asterisk'>*</span>Person ID
        %input{:id => "person_id",:name => "person_id", :class => "compulsory_field"}

      .field_20
        %label Performer ID
        %input{:id => "person_id", :value => "#{@current_user.person.try(:id)}", :name => "performer_id"}

      .field_20
        %label Performed at Start Date
        %input{:class => "startdatepick",:id => "membership_filter_start_date",:end_date => "membership_filter_end_date", :value => "#{Date.today().last_year.to_s}", :name => "start_date"}

      .field_20
        %label Performed at End Date
        %input{:class => "enddatepick",:id => "membership_filter_end_date",:start_date => "membership_filter_start_date", :value => "#{Date.today().to_s}", :name => "end_date"}

      .field_15
        %label &nbsp
        =submit_tag 'Submit', :id => "membership_log_filter", :disabled => true