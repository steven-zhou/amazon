<html>
  <head>
    <style type="text/css">
      .page_break {page-break-after: always;}
      #bank_deposit_sheet #header {margin:5px auto;width:100%;text-align:center;}
      #bank_deposit_sheet #title {border-top: 3px double black;border-bottom: 3px double black;}
      #bank_deposit_sheet #content {border-bottom: 3px double black;}
      #bank_deposit_sheet .top_item {float:left;width:33%;}
      #bank_deposit_sheet .title_item {float:left;width:20%;}
      #bank_deposit_sheet .clear {clear:both;}
      #bank_deposit_sheet #summary {width:100%;}
      #bank_deposit_sheet #summary_detail {margin:5px auto;width:35%;}
      #bank_deposit_sheet .summary_item {width:50%;float:left;}
    </style>
  </head>
  <body style="border:0; margin: 0;">
    <table style="border-bottom: 1px solid black; width: 100%">
      <tr>
        <td  style="text-align:center">EmZee Report</td>
       
      </tr>
    </table>
    <div id="bank_deposit_sheet">
      <div id="header"><h1>Bank Deposit Sheet</h1></div>
      <div id="content_holder">
        <div id="top">
          <div>
            <div class="top_item">Credit: <%= @client.full_name %></div>
            <div class="top_item">&nbsp;</div>
            <div class="top_item">Date: <%= @date %></div>
          </div>

          <div>
            <div class="top_item">Bank Run ID: <%= @run_id %></div>
            <div class="top_item">Bank Account: <%= account.account_number %></div>
            <div class="top_item">Time: <%= @time %></div>
          </div>
          <br class="clear"/>
        </div>

        <div id="title">
          <div class="title_item">Drawers Name</div>
          <div class="title_item">Cheque No.</div>
          <div class="title_item">Bank</div>
          <div class="title_item">Branch</div>
          <div class="title_item">Amount</div>
          <br class="clear"/>
        </div>

      </div>
    </div>
  </body>
</html>


