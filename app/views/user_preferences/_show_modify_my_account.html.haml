%div#modify_my_account_form
  .container
    .form_line
      .field_40
        %label Username
        .display_field_bg
          = @current_user.user_name
      .field_40
        %label Login at
        .display_field_bg
          = "#{session[:clocktime_date]} #{session[:clocktime]}"

  %div.container{:style =>"padding:1.5%"}
    %div.toggle_div{:toggle_id_name => "change_email", :style => "cursor: pointer;"}
      .options{:style=>"float:right"}
        = image_tag('Icons/System/expand.png')
      %h1 Change My Email

    %div#change_email.left{:style => "width:100%;display:none;"}
      -form_for @my_account,:url=>"/user_preferences/change_email",:method=>"put", :html => {:class => 'ajax_form', :id => "change_email_form"} do |my_account|
        .container
          .form_line
            .field_31
              %label <span class='asterisk'>*</span>Old Email
              %input{:id=>"old_email",:name=>"old_email",:class=>'mandantory_field', :mandantory_field1=>"old_email", :mandantory_field2=>"new_email", :mandantory_field3=>"retype_new_email",:submit_button_id=>"change_email_submit"}
          .form_line
            .field_31
              %label <span class='asterisk'>*</span>New Email
              %input{:id=>"new_email",:name=>"new_email",:class=>'mandantory_field', :mandantory_field1=>"old_email", :mandantory_field2=>"new_email", :mandantory_field3=>"retype_new_email",:submit_button_id=>"change_email_submit"}
          .form_line
            .field_31
              %label <span class='asterisk'>*</span>Repeat New Email
              %input{:id=>"retype_new_email",:name=>"retype_new_email",:class=>'mandantory_field', :mandantory_field1=>"old_email", :mandantory_field2=>"new_email", :mandantory_field3=>"retype_new_email",:submit_button_id=>"change_email_submit"}
          .form_line
            .field_31
              = submit_tag "Submit",:id=>"change_email_submit",:disabled => true


  %div.container{:style =>"padding:1.5%"}
    %div.toggle_div{:toggle_id_name => "change_password", :style => "cursor: pointer;"}
      .options{:style=>"float:right"}
        = image_tag('Icons/System/expand.png')
      %h1 Change My Password

    %div#change_password.left{:style => "width:100%;display:none;"}
      -form_for @my_account,:url=>"/user_preferences/change_password",:method=>"put", :html => {:class => 'ajax_form', :id => "change_password_form"} do |my_account|
        .container
          .form_line
            .field_35
              %label <span class='asterisk'>*</span>Old Password
              %input{:id=>"old_password",:name=>"old_password",:class => "mandantory_field", :type => "password",:mandantory_field1=>"old_password", :mandantory_field2=>"new_password", :mandantory_field3=>"retype_new_password",:submit_button_id=>"change_password_submit"}
          .form_line{:style => "height:auto;min-height:20px;"}
            %span{:style => "font-size:14px;"} Password requirement:6 to 30 characters, no spaces
          .form_line
            .field_35
              %label <span class='asterisk'>*</span>New Password
              %input{:id=>"new_password",:name=>"new_password",:class=>"mandantory_field password_change password", :type => "password",:mandantory_field1=>"old_password", :mandantory_field2=>"new_password", :mandantory_field3=>"retype_new_password",:submit_button_id=>"change_password_submit"}
          
            .field_35
              %label <span class='asterisk'>*</span>Repeat New Password
              %input{:id=>"retype_new_password",:name=>"retype_new_password",:class =>"mandantory_field", :type => "password",:mandantory_field1=>"old_password", :mandantory_field2=>"new_password", :mandantory_field3=>"retype_new_password",:submit_button_id=>"change_password_submit"}
            .field_20
              %label &nbsp
              .password_check
          .form_line
            .field_31
              %label &nbsp;
              = submit_tag "Submit",:id=>"change_password_submit",:disabled => true

  %div.container{:style =>"padding:1.5%"}
    %div.toggle_div{:toggle_id_name => "change_security_question", :style => "cursor: pointer;"}
      .options{:style=>"float:right"}
        = image_tag('Icons/System/expand.png')
      %h1 Change My Security Question

    %div#change_security_question.left{:style => "width:100%;display:none;"}
      -form_for @my_account,:url=>"/user_preferences/change_security_question",:method=>"put", :html => {:class => 'ajax_form admin_password_reset',:submit_button_id => "change_security_question_submit", :id => "change_security_question_form"} do |login|
        .container
          .form_line
            .field_50
              = login.label :security_question1, "<span class='asterisk'>*</span>Question1"
              = login.text_field :security_question1, :class => "compulsory_field",:name => "login_account[security_question1]"

            .field_45
              = login.label :question1_answer, "<span class='asterisk'>*</span>Answer1"
              = login.text_field :question1_answer, :class => "compulsory_field", :id => "login_account_question1_answer", :name => "login_account[question1_answer]"

          .form_line
            .field_50
              = login.label :security_question2, "<span class='asterisk'>*</span>Question2"
              = login.text_field :security_question2, :class => "compulsory_field",:name => "login_account[security_question2]"
          
            .field_45
              = login.label :question1_answer, "<span class='asterisk'>*</span>Answer2"
              = login.text_field :question2_answer, :class => "compulsory_field", :id => "login_account_question2_answer", :name => "login_account[question2_answer]"
          .form_line
            .field_100
              = submit_tag 'Submit',:id=>"change_security_question_submit"




     