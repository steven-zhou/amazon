.tab_corner
  .tab_looking_left
  .tab_looking_icon
    = image_tag('edit_icon.png')
    Edit
  .tab_looking_right

  %div.tab_close
    .tab_looking_left
    .tab_looking_icon
      =link_to_function image_tag('/images/Icons/System/close.png'), :class => "close_option close_edit", :id => "edit_role_condition_form",  :field => "condition_role", :flag_name => "role_condition", :title=>"Close"
    .tab_looking_right
.full_container#role_condition_edit_role
  %div
    -form_for @role, :url => {:controller => "roles", :action=> "update"}, :html => {:class => 'ajax_form'} do |role|
      .form_line
        .field_30
          = role.label :name, 'Role Name'
          .display_field_bg
            = @role.name
        .field_35
          = role.label :remarks, 'Remark'
          .display_field_bg
            = @role.remarks
        .field_5
          = role.label :role_status, 'Active'
          = role.check_box :role_status ,  :disabled => true, :style => "width:50%;"
          = role.text_field :role_type_id, :id => "role_type_id_field", :class => "hidden"
    %br.clear
    %br.clear

    %div#assgin_role_condition.full_container
      .options
        = link_to_function image_tag('close_icon.png'), :class => "close_flag close_option", :flag_name => "role_condition_assign", :id => "close_role_condition_assign", :style => "display:none;", :field => "role_condition", :KeepEditStatus=>"true" ,:title=>"Close"
      .title
        = link_to_function image_tag('add_icon.png', :size => "22x22"), :class => "toggle_button new_option add_flag", :toggle_id_name => "new_role_condition_assign", :flag_name => "role_condition_assign", :field => "role_condition", :id => "add_role_condition_assign"
        &nbsp
      %h2 Assign  Condition


      %div#new_role_condition_assign{:style => "display:none;"}
        = render :partial => 'role_conditions/assign_role_condition_form'
    %br
    %h1 Assigned Conditions
    %input{:id => "role_condition_mode", :mode => "show", :style => "display:none"}
    %div#role_condition_assigned
      = render :partial => 'role_conditions/existing_conditions'

      

      