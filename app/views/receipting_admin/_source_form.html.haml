- form_for source, @source, :url => {:controller => "receipting_admin", :action => 'create_source'}, :html => {:class => "ajax_form", :id => "source_form_new", :submit_button_id => "new_source_submit"}  do |f|
  %input{:name => "id", :style => "width:0px;height:0px;display:none;", :value => "#{session[:source_campaign_id]}"}
  .form_line
    .field_25
      = f.label :name, "<span class='asterisk'>*</span> Name"
      = f.text_field :name, :class => "compulsory_field", :id => "new_source_name"
    
    .field_20
      = f.label :volume, 'Volume'
      = f.text_field :volume
    .field_20
      = f.label :cost, 'Cost $'
      = f.text_field :cost
    .field_25
      = f.label :description, 'Description'
      = f.text_field :description
  .form_line
    .field_25
      = f.label :dead_return, 'Dead Return'
      = f.text_field :dead_return
    .field_20
      = f.label :letter_id, 'Default Letter ID'
      = f.text_field :letter_id
    .field_20
      = f.label :account_code_id, 'Default Account Code ID'
      = f.text_field :account_code_id
    .field_20
      = f.label :remarks, "Remarks"
      = f.text_field :remarks
    .field_10
      = f.label :status, "Active"
      = f.check_box :status, :checked => true, :class => "checkbox_style"  
  .form_line
    .field_20{:style => "float:right;"}
      = submit_tag "Submit", :disabled => true, :id => "new_source_submit"
