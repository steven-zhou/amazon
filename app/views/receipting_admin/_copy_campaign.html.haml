.container{:style => "background-image:none;"}
  -form_for :campaign, Campaign.new, :url => {:action => "create_copy_of_campaign"}, :html => {:class => 'ajax_form'} do |f|
    .form_line
      = f.label :name, '<span class="asterisk">*</span>Name'
      = f.text_field :name, :value => "", :class=>"mandantory_field", :mandantory_field1=>"campaign_name", :submit_button_id=>"copy_campaign_submit"
    .form_line
      = f.label :description, 'Description'
      = f.text_field :description
      %input{:style => "display:none", :name =>"new"}
      %input{:style => "display:none", :name => "source_id", :value => "#{@campaign.id}"}
    
    = submit_tag "Save", :id => "copy_campaign_submit", :disabled => true