<% if @source.errors.empty? -%>
$('#add_new_source').html('<%= escape_javascript(render(:partial => "/receipting_admin/new_source")) %>');
$('#existing_sources').html('<%= escape_javascript(render(:partial => "/receipting_admin/existing_sources")) %>');
$('#source_mode').attr('mode', 'show');
$('.select_ajax_call[field="source"]').attr('disabled', false)
   
<% else %>
$("#flash_message_text").html("<%=escape_javascript(flash[:error])%>");
 $('#flash_message').dialog( {
     modal: true,
      resizable: false,
      draggable: true,
      height: 'auto',
      width: 600,
  buttons:{
  Ok: function() {
  $(this).dialog('destroy');
  }
  }
  });
 $('#flash_message').dialog( 'option', 'title', 'ERROR');
 $('#flash_message').parent().find("a").css("display","none");
 $("#flash_message").parent().css('background-color','#D1DDE6');
 $("#flash_message").css('background-color','#D1DDE6');
  $('#flash_message').dialog('open');
<% end -%>
  enable_form_after_submit_finish();