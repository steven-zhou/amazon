<div id="signin_container" title="Login Assistance">
  <div id="signin_logo" ></div>
  <div id="signin_form">
    <div class="sign_content_title" > Member Portal </div>
    <div id="signin_form_wrapper">
      <% form_tag('/guests/login/', :id => "login_form", :submit_button_id => "signin_button") do -%>
        <div class="form_line">
          <div class="field_100">
            <input id="username" class="field compulsory_field" type="text" size="28" name="user_name" style="height:24px;"  title="Email"/>
          </div>
        </div>
        <div class="form_line">
          <div class="field_100">
            <input id="password" class="field compulsory_field" type="password" size="28" name="password" style="height:24px;" title ="Password"/>
          </div>
        </div>

        <div id="signin_submit" style="width:102%">
          <input id="signin_button" type="submit" value="Sign In" disabled="true" style="padding:2% 4%;margin-bottom:15px;"/>
          <a href="" id="register_guest_account">Register</a> - <a href="/guests/forgot_password/" id="forgot_password">Forgot your password?</a>
        </div>
        <%unless @error_message.blank?%>
        <div class="form_line">
          <div class="register_feedback" id="login_fail_message_container" ><%=@error_message%></div>
        </div>
      <%end%>

      <br style="clear:both;"/>
      <% end -%>

    </div>
  </div>
  <br></br>
  <br style="clear:both"></br>


</div>



<div id="register_container" style="display:none;">
  <div id="signin_container">
    <div id="register_form" >
      <div class="sign_content_title"> Member Registration </div>
      <div id="signin_form_wrapper">
        <% form_tag('/guests/create/',:id=>"create_guest",:class => "ajax_form", :submit_button_id => "register_button") do -%>
          <div class="form_line">
            <input id="first_name" class="field compulsory_field" type="text" size="28" name="guests[first_name]"  title="*Family Name"/><br />
          </div>


          <div class="form_line">
            <input id="family_name" class="field compulsory_field" type="text" size="28" name="guests[family_name]"  title="*Last Name"/><br />
          </div>

          <div class="form_line">
            <input id="eamil" class="field compulsory_field" type="text" size="28" name="guests[email]"  title="*Email"/><br />
          </div>

          <div class="form_line">
            <input id="phone" class="field compulsory_field" type="text" size="28" name="guests[phone_num]"  title="*Contact Number" /><br />
          </div>

          <div class="form_line">
            <div class="captcha"><%= show_simple_captcha %></div>
          </div>

          <div id="sub_width" style="width: 102%;">
            <div id="register_submit" style="width:60%;float:right;">

              <input id="register_button" class="submit_hide_cancel" type="submit" value="Register" disabled="true" style="padding:8px;width:40%;float:right;margin-bottom:15px;"/>

              <a href="/guests/" id="cancel" class="alt_option cancel_disappear register_cancel" style="padding-top: 5px;width:20%;">cancel</a>
            </div>

          </div>


          <div class="form_line" id="feedback_area">
            <div class="register_feedback" id="successful_message_container" style="display:none;"></div>
            <div class="register_feedback" id="fail_message_container" style="display:none;"></div>
          </div>
        <% end -%>
        <br style="clear:both"></br>
      </div>


    </div>
    <br style="clear:both"></br>
  </div>
</div>