<%- if @query_header.status == false  %>
  $("#save_button").attr("disabled", "disabled");
  $("#run_button_edit").attr("disabled", "disabled");
<%- else %>
  $("#save_button").removeAttr("disabled");
  $("#run_button_edit").removeAttr("disabled");
<%- end %>