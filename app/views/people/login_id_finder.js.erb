
$("#login_account_spinner").css('display','none');
 $("#login_name_container_0").show();
<% if @validation==false %>
  $("#login_name_container_0").css('display','').val('');
  $(".check_login").css('background-color', 'pink');
  $('.user_email_new').val('')
  <%if @person_valid == false%>
    $("#login_name_container_0").css('display','').html("Invalid ID").fadeIn(5000);
  <%elsif @person_unique_valid == false%>
    $("#login_name_container_0").css('display','').html("This Person Already Have Account").fadeIn(5000);
  <%end%>

<% else %>
  $("#login_name_container_0").css('display','').html("<%=escape_javascript("#{@person.name}")%>").fadeIn(5000);;
  $(".check_login").css('background-color', '');
  $('.user_email_new').val("<%=escape_javascript("#{@primary_email}")%>")

<% end %>