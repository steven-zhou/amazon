<% if @person.new_record? %>
  $("#<%=escape_javascript("#{@update_field}")%>").css('display','');

  $("#<%=escape_javascript("#{@update_field}")%>").html("Invalid ID").fadeOut(3000);

  $("#<%=escape_javascript("#{@input_field}")%>").val("");
  $('#new_extension_submit_button').attr('disabled', 'true');

<% else %>

  $("#<%=escape_javascript("#{@update_field}")%>").css('display','');
  $("#<%=escape_javascript("#{@update_field}")%>").html("<%=escape_javascript("#{@person.name}")%>")

<% end %>