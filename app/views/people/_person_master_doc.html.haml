-# Displays An Address
-if !@person.master_docs.blank?
  -@person.master_docs.each do |person_master_doc|
    -div_for(person_master_doc, :class => 'header_container') do
      %div
        .title
          %h2{:class=>("red" if person_master_doc.master_doc_type.to_be_removed == true)}
            = person_master_doc.master_doc_type.nil? ? "" : "#{person_master_doc.master_doc_type.name}"
 

      %div{:style => "float:right;text-align:right;"}
        = format_masterdoc(person_master_doc)
-else
  .no_record
    %h1 No Record