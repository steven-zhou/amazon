%div.container
  %div.toggle_div{:toggle_id_name => "receipting_details", :style => "cursor: pointer;"}
    .options
      = image_tag('Icons/System/collapse.png')
    .right{:style => "margin:3px 3px 0 0;"}
      = link_to "My Transactions", {:controller => "receipting", :action => "personal_deposit"}, :class => "alt_link"
    %h1 Receipting

  %div#receipting_details.left{:style => "width:100%;"}
    .container
      %h3 Last Transaction
      .form_line
        .field_31
          %label Date
          .display_field_bg
            1st February 2010

        .field_31
          %label Amount
          .display_field_bg
            #{number_to_currency(150)}

        .field_31
          %label Account
          .display_field_bg
            Membership

      %h3 YTD
      .form_line
        .field_31
          %label Number of Transactions
          .display_field_bg
            2

        .field_31
          %label Amount
          .display_field_bg
            #{number_to_currency(300)}

        .field_31
          %label Average Transaction
          .display_field_bg
            #{number_to_currency(150)}
            

