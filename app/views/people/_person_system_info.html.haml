%div.container
  %div.toggle_div{:toggle_id_name => "membership_details", :style => "cursor: pointer;"}
    .options
      = image_tag('Icons/System/expand.png')
    .right{:style => "margin:3px 3px 0 0;"}
      -unless @person.is_member
        = link_to "My Memberships", {:controller => "module", :action => "become_membership",:id=>@person.id}, :class => "alt_link"
      -else
        = link_to "My Memberships", {:controller => "module", :action => "manage_membership",:id=>@person.id}, :class => "alt_link"
    %h1 Membership

  %div#membership_details.left{:style => "width:100%;display:none;"}
    .container
      %h3 Setup
      .form_line{:style => "height:auto;"}
        .field_31
          %label Type
          .display_field_bg
            Full Member

        .field_31{:style => "height:auto;"}
          %label System Status
          .display_field_bg
            Billing Activated
            %br{:style => "margin-top:4px;display:block;"}
            Financial

        .field_31
          %label Payment Method
          .display_field_bg
            CC Direct Debit

      %h3 Payments
      .form_line
        .field_31
          %label Last Payment Date
          .display_field_bg
            1st February 2010

        .field_31
          %label Amount
          .display_field_bg
            #{number_to_currency(120)}

        .field_31
          %label Balance
          .display_field_bg
            (#{number_to_currency(250)})



