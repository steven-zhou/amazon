-default_nationality = @current_user.default_value.try(:default_nationality_id)
-default_language = @current_user.default_value.try(:default_language_id)

.form_line
  .field_31
    = p.label :birth_date,"Date of Birth"
    = p.text_field :birth_date, :class=>@personal_check_field.include?("birth_date")?"personal_check_field birthdatepick":"birthdatepick", :value=>@person.birth_date.to_s, :style => "width:80% !important;"
  .field_31
    = p.label :age,"Age"
    %div.display_field_bg{:id => "person_age"}
      = @person.birth_date.nil? ? "" : Time.now.year - @person.birth_date.year
  .field_31
    = p.label :gender, 'Gender'
    = p.collection_select :gender_id, Gender.active_gender, :id, :name, {:include_blank => true},{:class=>@personal_check_field.include?("gender")?"personal_check_field":""}
  %br.clear
.form_line
  .field_31
    = p.label :marital_status, 'Marital Status'
    = p.collection_select :marital_status_id, MaritalStatus.active_marital_status, :id, :name, {:include_blank => true}, {:class=>@personal_check_field.include?("marital_status")?"personal_check_field":""}
  .field_31
    = p.label :religion_id, 'Religion'
    = p.collection_select :religion_id, Religion.active_religion, :id, :name, {:include_blank => true}, {:class=>@personal_check_field.include?("religion")?"personal_check_field":""}
.form_line
  .field_31
    = p.label :origin_country_id,'Country of Origin'
    = p.collection_select :origin_country_id, @countries, :id, :short_name, {:include_blank => true}, {:class=>@personal_check_field.include?("origin_country")?"personal_check_field":""}
  .field_31
    = p.label :nationality_id, 'Nationality'
    = p.collection_select :nationality_id, @countries, :id, :citizenship, {:include_blank => true,:selected => @person.new_record? ? default_nationality : @person.nationality_id}, {:class=>@personal_check_field.include?("nationality")?"personal_check_field":""}
  .field_31
    = p.label :language_id, 'Language'
    = p.collection_select :language_id, @Languages, :id, :name, {:include_blank => true,:selected => @person.new_record? ? default_language : @person.language_id}, {:class=>@personal_check_field.include?("language")?"personal_check_field":""}
.form_line
  .field_31
    = p.label :residence_country_id,"Country of Residence"
    = p.collection_select :residence_country_id, @countries, :id, :short_name, {:include_blank => true}, {:class=>@personal_check_field.include?("residence_country")?"personal_check_field":""}
  .field_31
    = p.label :other_nationality_id,"Other Nationality"
    = p.collection_select :other_nationality_id, @countries, :id, :citizenship, {:include_blank => true}, {:class=>@personal_check_field.include?("other_nationality")?"personal_check_field":""}
  .field_31
    = p.label :other_language,"Other Language"
    = p.collection_select :other_language_id, @Languages, :id, :name, {:include_blank => true}, {:class=>@personal_check_field.include?("other_language")?"personal_check_field":""}
.form_line
  .field_31
    = p.label :industry_sector,"Industry Sector"
    = p.collection_select :industry_sector_id, IndustrySector.active_industry_sector, :id, :name, {:include_blank => true}, {:class=>@personal_check_field.include?("industry_sector")?"personal_check_field":""}
  .field_64
    = p.label :interests,"Interests"
    = p.text_field :interests, :class=>@personal_check_field.include?("interests")?"personal_check_field":"" , :style => "width:99% !important;"