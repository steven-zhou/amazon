.full_container
  %h1 Existing User Groups
  %table#show_user_groups_grid{:class=>"selectable_grid", :db_click_function=>"true", :edit=>"true", :db_click_url=>"/user_groups/"}
%script{:type=>"text/javascript", :charset=>"utf-8"}
  :plain
    $("#show_user_groups_grid").flexigrid({
      url: '/grids/show_user_groups_grid?tag_type_id=#{@tag_type_id}',
      dataType: 'json',
      colModel: [
        {
          display: 'ID',
          name: 'id',
          width: 40,
          sortable: true,
          align: 'left'
        },

        {
          display: 'Name',
          name: 'name',
          width: 570,
          sortable: true,
          align: 'left'
        },

        {
          display: 'Number of accouts',
          name: 'login_accounts.size',
          width: 270,
          sortable: true,
          align: 'left'
        }
      ],

      searchitems:[
      {
        display: 'Name',
        name: 'name'
      }
      ],

      sortname: "name",
      sortorder: "asc",
      usepager: true,
      title: '',
      useRp: true,
      rp: 20,
      showTableToggleBtn: false,
      width: 'auto',
      height: 'auto'
    });