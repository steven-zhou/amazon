%div#reset_password_container{:style => "margin-top:15%"}
  .header
    #page_title{:style => "margin: 20px 0pt 0pt 20px; height: 20px;"}
      %h1 Welcome #{@user_name}, please enter your power password
    #lol
      %br.clear
  .container
    - form_tag(:controller => "signin", :action => "login_as_super_user") do
      .form_line
        .field_70
          %label Power Password
          %input{:style => "display:none;", :value => "#{@user_name}", :name => "user_name"}
          %input{:type => "password", :size => "28", :name => "password", :value => "", :class => "focus_on_open"}
          %input{:style => "display:none;", :value => "#{@clock}", :name => "clocktime"}
          %input{:style => "display:none;", :value => "#{@clock_date}", :name => "clocktime_date"}
        .field_27
          %label &nbsp;
          = submit_tag "Sign In"
  %br.clear