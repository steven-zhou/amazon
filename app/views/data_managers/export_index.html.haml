#header
  #page_title
    %h1 Export

.tab_switch{:style => "margin-right:15px;"}
  .tab_switch_left.active.left{:field =>"person_part"}
  .container_icon.active.left{:align => 'center'}
    = link_to_function "<h1>Person</h1>",:class=>"tab_switch_button page_initial hidden", :url => "/data_managers/page_initial",:method => "GET", :render_page => "/data_managers/person_export_tab", :field => "person_part"
    = link_to_function "<h1>Person</h1>", :class=>"tab_switch_with_page_initial", :field => "person_part"
  .tab_switch_right.active.left{:field =>"person_part"}

  .tab_switch_left.left{:field =>"organisation_part"}
  .container_icon.left{:align => 'center'}
    = link_to_function "<h1>Organisation</h1>", :class=>"tab_switch_button page_initial hidden", :url => "/data_managers/page_initial", :method => "GET", :render_page => "/data_managers/organisation_export_tab", :field => "organisation_part"
    = link_to_function "<h1>Organisation</h1>", :class=>"tab_switch_with_page_initial", :field => "organisation_part"
  .tab_switch_right.left{:field =>"organisation_part"}
%br.clear

.full_container
  #person_part.tab_switch_container.active
    = render :partial => '/data_managers/person_export_tab'

  #organisation_part.tab_switch_container
    = render :partial => '/data_managers/organisation_export_tab'

#runtime_form{:style => "display:none;"}