%li{:level => "2", :id => "tag_type_#{tag_type.id}"}
  %div{:level => "2", :class => tag_type.status ? "toggle_multilevel_options container_active" : "toggle_multilevel_options container_inactive"}
    .options
      = link_to_function image_tag('Icons/System/add_child.png'), :class => "new_tag", :title=>"New Child", :tag => @category, :tag_type_id => tag_type.id unless (@category == "Table" || @category == "Contact" || @category == "Extra" || @category == "Receipt" || tag_type.status == false || tag_type.tag_meta_type.status == false)
      = link_to image_tag('edit_icon.png'), edit_tag_type_path(tag_type), :class => 'get_tag', :title=>"Edit" unless (@category == "Table")
      = link_to image_tag('delete_icon.png'), tag_type_path(tag_type), :class => 'delete', :field => "TagType",:error_message_field => "TagType", :title=>"Remove" unless (@category == "Extra" || @category == "Table")
    .title
      %h2 #{tag_type.name}
  %br.clear

  -if tag_type.status
    %div{:id => "tags_#{tag_type.id}"}
      = render(:partial => "/tags/tags", :locals => {:tag_type => tag_type,:category=>@category})
