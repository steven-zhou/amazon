<% if @group_types.size >0 %>
  <%- options = String.new  %>

  <%- @group_types.each do |i| %>
    <%- options += '<option value='+"#{i.id}"+'>'+" #{i.name}"+'</option>' %>
  <%- end %>

  $("#group_id").html("<%= escape_javascript("#{options}") %>");
  $("#group_id").change('');
  $("#group_type_description").show().html('<%= escape_javascript("#{@group_meta_type.description.gsub("\n","<br>")}") %>');


<% else %>
  $("#group_id").html('<option></option>');
  $("#group_description").html("").hide();
  $("#group_type_description").html("").hide();
  $(".mandantory_dropdown_list").change();
<% end %>




