<%- if flash[:error].nil? %>
$("#criterias").append("<%= escape_javascript(render(:partial => 'queries/query_criteria')) %>");
$("#save_button").attr("disabled", false);
$("#run_button").attr("disabled", false);
$("#edit_form #run_button_edit").attr("disabled", false);
$("#query_criteria_operator").val('');
$("#query_criteria_value").val('');
if ($("#new_runtime").attr('checked')==true) {
  $("#new_runtime").click();
}
$('#<%= dom_id(@query_criteria) %>').effect('slide', {direction:'right'});
<%- else %>
$("#flash_message_text").html("<%=escape_javascript(flash[:error])%>");
 $('#flash_message').dialog( {
     modal: true,
      resizable: false,
      draggable: true,
      height: 'auto',
      width: 600,
  buttons:{
  Ok: function() {
  $(this).dialog('destroy');
  }
  }
  });
 $('#flash_message').dialog( 'option', 'title', 'ERROR');
 $('#flash_message').parent().find("a").css("display","none");
 $("#flash_message").parent().css('background-color','#D1DDE6');
 $("#flash_message").css('background-color','#D1DDE6');
  $('#flash_message').dialog('open');
<%- end %>

enable_form_after_submit_finish();