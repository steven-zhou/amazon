.tab_corner
  .tab_looking_left
  .tab_looking_icon
    = image_tag('edit_icon.png')
    Edit
  .tab_looking_right

  %div.tab_close
    .tab_looking_left
    .tab_looking_icon
      =link_to_function image_tag('/images/Icons/System/close.png'), :class => "edit_close_flag close_edit", :id => "edit_role_form",:new_form_field=>"new_role_bar",  :field => "role", :flag_name => "role", :title=>"Close"
    .tab_looking_right
.full_container#edit_role
  %div
    -form_for @role, :url => {:controller => "roles", :action=> "update"}, :html => {:class => 'ajax_form'} do |role|
      .form_line{:style => "float:none;"}
        .field_20
          = role.label :role_type_id, "<span class='asterisk'>*</span>Role Type"
          = collection_select :role,:role_type_id, RoleType.active_role_type, :id, :name, {}, {:class => "mandantory_dropdown_list",:mandantory_field1=>"role_edit_name",:mandantory_field2=>"role_role_type_id",:submit_button_id=>"role_new_submit"}
        .field_20
          = role.label :name, "<span class='asterisk'>*</span>Role Name"
          = role.text_field :name,:id=>"role_edit_name",:class=>'mandantory_field',:mandantory_field1=>"role_edit_name",:mandantory_field2=>"role_role_type_id",:submit_button_id=>"role_edit_submit", :disabled=>@role.role_status == false
        .field_20
          = role.label :remarks, 'Remark'
          = role.text_field :remarks, :disabled=>@role.role_status == false
        .field_5
          = role.label :role_status, 'Active'
          = role.check_box :role_status, :class => "checkbox_style"

        .field_20
          %label &nbsp
          = submit_tag 'Submit', :style => 'display:inline;float:right;',:id=>"role_edit_submit"

        