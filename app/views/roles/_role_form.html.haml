-form_for @role, :html => {:class => 'ajax_form role_main_form',:id=>"role_new",:submit_button_id => "role_new_submit"} do |role|
  .form_line{:style => "float:none;"}
    .field_20
      = role.label :role_type_id, "<span class='asterisk'>*</span>Role Type"
      = collection_select(:role,:role_type_id, RoleType.active_role_type, :id, :name, {:include_blank=>true}, {:class => "compulsory_field"})
    .field_20
      = role.label :name, "<span class='asterisk'>*</span>Role Name"
      = role.text_field :name,:class=>'compulsory_field'
    .field_20
      = role.label :remarks, 'Remark'
      = role.text_field :remarks
    .field_15
      = role.label :role_status, 'Active'
      = role.check_box :role_status, :checked => true, :class => "checkbox_style"

    .field_15
      %label &nbsp
      = submit_tag 'Submit',:id=>"role_new_submit",:disabled=>true, :style => 'display:inline;float:right;'