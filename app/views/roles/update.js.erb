<% if flash[:error].nil? %>
$('#existing_role').html('<%=escape_javascript(render(:partial => "/roles/existing_role"))%>')
$('#new_role_bar').show();
$('#add_new_role').show();
$('#edit_role_container').html('');
$('#role_role_type_id').attr("disabled", false);

$('#role_mode').attr('mode','show');
<%else%>

 $('#error_message_text').html("<%=escape_javascript(flash[:error])%> ");
            $('#error_message_image').css("display","");
            $('#error_message').dialog({
                modal: true,
                resizable: false,
                draggable: true,
                height: 'auto',
                width: 'auto',
                buttons: {
                    "OK": function(){
                        $(this).focus();
                        $(this).dialog('destroy');
                        return true;
                    }
                }
            });
            $('#error_message').dialog('option', 'title', 'Error');
            $('#error_message').parent().find("a").css("display","none");
            $("#error_message").parent().css('background-color','#D1DDE6');
            $("#error_message").css('background-color','#D1DDE6');
            $('#error_message').dialog('open');


<%end%>
enable_form_after_submit_finish();
