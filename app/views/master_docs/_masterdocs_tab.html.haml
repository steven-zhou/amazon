-#MasterDocs Tab
#add_new_master_doc.header_container
  .options
    = link_to_function image_tag('close_icon.png'), :class => " person_master_doc_close ", :toggle_id_name => "new_master_doc", :style => "display:none", :field => "master_doc", :title=>"Close"
  .title
    = link_to_function image_tag('add_icon.png'), :id=>"add_masterdoc", :class=>"person_master_doc_toggle_button", :toggle_id_name => "new_master_doc"  if (!person.nil? && !person.new_record?)
    &nbsp
  %h1 New Master Doc
  %input{:id => "master_doc_hidden_tab", :mode => "show", :style => "display:none"}
  %input{:id => "master_doc_input_change_or_not", :style => "display:none", :value => "false"}
  -# Initially hidden new masterdoc form
  -form_for([@person,@masterdoc], :html => {:style => "display:none", :class => 'ajax_form', :submit_button_id => "master_doc_new_submit"}) do |form|
    = render :partial => '/master_docs/master_doc_form', :locals => { :form => form }
    = submit_tag 'Submit',:id=>"master_doc_new_submit",:disabled => true
#masterdocs
  -# Render the person's addresses
  = render :partial => '/master_docs/master_doc', :collection => person.master_docs