.full_container
  %h2 Existing Email Templates

  %table#show_message_templates_grid{:class=>"selectable_grid",:field=>"message_template",:db_click_function=>"true",:db_show=>"true",:db_click_url=>"/communication/edit_message_template/", :params2 => "#{@type}"}

%script{:type => "text/javascript", :charset => "utf-8"}
  :plain
    delete_from_a_grid = function(){
    delete_from_grid($("#show_message_templates_grid tr.trSelected").attr('id'),"#message_template_mode","delete","/communication/destroy_message_template/");
    };
    
    retrieve_from_a_grid = function(){
    retrieve_from_grid($("#show_message_templates_grid tr.trSelected").attr('id'),"#message_template_mode","get","/communication/retrieve_message_template.js");
    };
  



    $("#show_message_templates_grid").flexigrid({
    url: '/grids/show_message_templates_grid?model_type=#{@model_type}',
    dataType: 'json',
    colModel : [
    {
    display: 'ID',
    name : 'id',
    width : 30,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Category',
    name : 'amazon_settings.name',
    width :200,
    sortable :true,
    align: 'left'
    },

    {
    display: 'Name',
    name : 'name',
    width : 400,
    sortable : true,
    align: 'left'
    },

    {
    display: 'Created At',
    name : 'created_at',
    width : 270,
    sortable : true,
    align: 'left'
    }

    ],
    buttons : [
            {name: '', bclass: 'delete delete_button_on_grid', onpress : delete_from_a_grid},
            {name: '', bclass: 'get retrieve_button_on_grid', onpress : retrieve_from_a_grid}
        ],
    sortname: "name",
    sortorder: "asc",
    usepager: true,
    title: '',
    useRp: true,
    rp: 20,
    showTableToggleBtn: false,
    width: 'auto',
    height: 'auto'
    });
 