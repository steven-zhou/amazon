#header
  #page_title
    %h1 License
  #lol
  %br.clear

- form_for @client_setup do |f|
  .container
    %h2 Client
    .form_line
      %p #{@client_organisation.id}-#{@client_organisation.full_name}
      %input{:style => "display:none;", :name => "installation"}
    .form_line
      .field_10
        = f.label :client_id, "Registration ID"
        = f.text_field :client_id
      .field_20
        = f.label :client_rego, "Registration Number"
        = f.text_field :client_rego
      .field_10
        = f.label :installation_date, "Installation Date"
        = f.text_field :installation_date, :class => "startdatepick", :end_date => "client_setup_halt_date", :value=> @client_setup.installation_date.to_s
      .field_10
        = f.label :halt_date, "Halt Date"
        = f.text_field :halt_date, :class => "enddatepick", :start_date => "client_setup_installation_date", :value=> @client_setup.halt_date.to_s

    %br.clear
    %p &nbsp;

    .container
      %h2 System
      .form_line
        .field_15
          = f.label :system_type, "System Type"
          %select{:name => "client_setup[system_type]"}
            %option{:value => "Demo", :selected => @client_setup.system_type == "Demo"} Demo
            %option{:value => "Live", :selected => @client_setup.system_type == "Live"} Live
            %option{:value => "Trial", :selected => @client_setup.system_type == "Trial"} Trial
            %option{:value => "Limited", :selected => @client_setup.system_type == "Limited"} Limited
        .field_10
          = f.label :hosting_status, "Hosting"
          %select{:name => "client_setup[hosting_status]"}
            %option{:value => "On Site", :selected => @client_setup.system_type == "On Site"} On Site
            %option{:value => "Off Site", :selected => @client_setup.system_type == "Off Site"} Off Site
        .field_5
          = f.label :system_status, "Active"
          = f.check_box :system_status
        .field_15
          = f.label :system_purchase, "System Purchase"
          %select{:name => "client_setup[system_purchase]"}
            %option{:value => "Full", :selected => @client_setup.system_type == "Full"} Full
            %option{:value => "Hire", :selected => @client_setup.system_type == "Hire"} Hire
            %option{:value => "Usage", :selected => @client_setup.system_type == "Usage"} Usage
            %option{:value => "Per Member", :selected => @client_setup.system_type == "Per Member"} Per Member
        .field_15
          = f.label :maximum_core_records, "Maximum Core Records"
          = f.text_field :maximum_core_records, :class => "integer_field"
        .field_20
          = f.label :number_of_users, "Number of System Users"
          = f.text_field :number_of_users, :class => "integer_field"

  .container
    %h2 Security Parameters
    .form_line
      .field_20
        = f.label :number_of_login_attempts, "Number of Login Attempts"
        %select{:name => "client_setup[number_of_login_attempts]"}
          %option{:value => "0", :selected => @client_setup.number_of_login_attempts == 0} Unlimited
          %option{:value => "3", :selected => @client_setup.number_of_login_attempts == 3} 3
          %option{:value => "4", :selected => @client_setup.number_of_login_attempts == 4} 4
          %option{:value => "5", :selected => @client_setup.number_of_login_attempts == 5} 5
          %option{:value => "6", :selected => @client_setup.number_of_login_attempts == 6} 6
      .field_20
        = f.label :new_account_graceperiod, "New Account Grace Period (Days)"
        %select{:name => "client_setup[new_account_graceperiod]"}
          %option{:value => "0", :selected => @client_setup.new_account_graceperiod == 0} Unlimited
          %option{:value => "7", :selected => @client_setup.new_account_graceperiod == 7} 7
          %option{:value => "14", :selected => @client_setup.new_account_graceperiod == 14} 14
          %option{:value => "21", :selected => @client_setup.new_account_graceperiod == 21} 21
          %option{:value => "28", :selected => @client_setup.new_account_graceperiod == 28} 28
      .field_20
        = f.label :session_timeout, "Session Timeout (Mins)"
        %select{:name => "client_setup[session_timeout]"}
          %option{:value => "0", :selected => @client_setup.session_timeout == 0} Unlimited
          %option{:value => "5", :selected => @client_setup.session_timeout == 5} 5
          %option{:value => "10", :selected => @client_setup.session_timeout == 10} 10
          %option{:value => "20", :selected => @client_setup.session_timeout == 20} 20
          %option{:value => "30", :selected => @client_setup.session_timeout == 30} 30
      .field_20
        = f.label :password_lifetime, "User Password Lifetime (Days)"
        %select{:name => "client_setup[password_lifetime]"}
          %option{:value => "0", :selected => @client_setup.password_lifetime == 0} Unlimited
          %option{:value => "15", :selected => @client_setup.password_lifetime == 15} 15
          %option{:value => "30", :selected => @client_setup.password_lifetime == 30} 30
          %option{:value => "60", :selected => @client_setup.password_lifetime == 60} 60
          %option{:value => "90", :selected => @client_setup.password_lifetime == 90} 90
      .field_10
        %label &nbsp;
        = submit_tag "Submit"

