-form_for([@person,relationship], :html => {:style => "display:none", :class => 'ajax_form add_relationship', :submit_button_id => "relationship_new_submit"}) do |relationship|
  .form_line{:style => "float:none;"}
    .field_20
      = relationship.label :relationship_type_id, "<span class='asterisk'>*</span>Type"
      = relationship.collection_select :relationship_type_id, RelationshipType.active_relationship_type - @person.personal_relationship_type, :id, :name, {:include_blank => true}, {:class => "compulsory_field"}
    .field_20{:style => "margin-right: 2px;"}
      = relationship.label :related_person_id, "<span class='asterisk'>*</span>System ID"
      = relationship.text_field :related_person_id,:class=>"compulsory_field"
    .field_5
      %label &nbsp;
      = link_to_function image_tag("Icons/System/search.png"), :class => "person_lookup", :update_field => "relationship_related_person_id", :title=>"Search"
    .field_30
      %label#related_person_name_container{:style => "font-size:17px;display:inline;"}
      %br
    .field_20

    %input{:name => "relationship[source_person_id]", :value => "#{@person.id}", :class => "hidden"}
    = submit_tag 'Submit',:id=>"relationship_new_submit",:disabled =>true
  %br{:style=>"clear:both;"}